# דוגמה 6: רשימות
# Example 6: Lists

# יצירת רשימה
מספרים = [1, 2, 3, 4, 5]
הדפס("רשימה: " + מחרוזת(מספרים))
הדפס("אורך: " + מחרוזת(אורך(מספרים)))

# גישה לאיברים
הדפס("איבר ראשון: " + מחרוזת(מספרים[0]))
הדפס("איבר אחרון: " + מחרוזת(מספרים[4]))

# שינוי איבר
מספרים[2] = 100
הדפס("אחרי שינוי: " + מחרוזת(מספרים))

# שיטות רשימה
פירות = ["תפוח", "בננה"]
פירות.append("תפוז")
הדפס("אחרי הוספה: " + מחרוזת(פירות))

# מעבר על רשימה עם אינדקס
הדפס("\nרשימה עם אינדקסים:")
עבור i בתוך טווח(אורך(פירות)):
    הדפס(מחרוזת(i) + ": " + פירות[i])

# חיבור רשימות
רשימה1 = [1, 2, 3]
רשימה2 = [4, 5, 6]
מאוחדת = רשימה1 + רשימה2
הדפס("רשימה מאוחדת: " + מחרוזת(מאוחדת))

# סכום רשימה
הדפס("סכום: " + מחרוזת(סכום(מספרים)))
הדפס("מינימום: " + מחרוזת(מינימום(מספרים)))
הדפס("מקסימום: " + מחרוזת(מקסימום(מספרים)))
