# דוגמה 10: מחשבון פשוט
# Example 10: Simple Calculator

הדפס("=== מחשבון נחשון ===")

הגדר חבר(א, ב):
    החזר א + ב

הגדר חסר(א, ב):
    החזר א - ב

הגדר כפול(א, ב):
    החזר א * ב

הגדר חלק(א, ב):
    אם ב == 0:
        הדפס("שגיאה: לא ניתן לחלק באפס!")
        החזר ריק
    החזר א / ב

הגדר חזקה(בסיס, מעריך):
    החזר בסיס ** מעריך

הגדר שארית(א, ב):
    החזר א % ב

הגדר ערך_מוחלט_של(מספר):
    אם מספר < 0:
        החזר מספר * -1
    החזר מספר

# דוגמאות שימוש
הדפס("")
הדפס("פעולות בסיסיות:")
הדפס("10 + 5 = " + מחרוזת(חבר(10, 5)))
הדפס("10 - 5 = " + מחרוזת(חסר(10, 5)))
הדפס("10 * 5 = " + מחרוזת(כפול(10, 5)))
הדפס("10 / 5 = " + מחרוזת(חלק(10, 5)))

הדפס("")
הדפס("פעולות מתקדמות:")
הדפס("2 בחזקת 8 = " + מחרוזת(חזקה(2, 8)))
הדפס("17 מודולו 5 = " + מחרוזת(שארית(17, 5)))
הדפס("ערך מוחלט של -42 = " + מחרוזת(ערך_מוחלט_של(-42)))

# חישוב ביטוי מורכב
הדפס("")
הדפס("חישוב מורכב:")
תוצאה = חבר(כפול(3, 4), חסר(10, 5))
הדפס("(3 * 4) + (10 - 5) = " + מחרוזת(תוצאה))

# טבלת כפל
הדפס("")
הדפס("טבלת כפל של 7:")
עבור i בתוך טווח(1, 11):
    תוצאה = כפול(7, i)
    הדפס("7 × " + מחרוזת(i) + " = " + מחרוזת(תוצאה))
