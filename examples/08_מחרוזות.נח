# דוגמה 8: מחרוזות
# Example 8: Strings

טקסט = "שלום עולם"
הדפס("טקסט: " + טקסט)
הדפס("אורך: " + מחרוזת(אורך(טקסט)))

# גישה לתווים
הדפס("תו ראשון: " + טקסט[0])
הדפס("תו אחרון: " + טקסט[9])

# שיטות מחרוזת
משפט = "  שלום לכולם  "
הדפס("ללא רווחים: '" + משפט.strip() + "'")

טקסט_גדול = "HELLO"
הדפס("אותיות קטנות: " + טקסט_גדול.lower())

טקסט_קטן = "hello"
הדפס("אותיות גדולות: " + טקסט_קטן.upper())

# חיפוש במחרוזת
משפט = "נחשון היא שפה מדהימה"
אם "שפה" בתוך משפט:
    הדפס("מצאתי את המילה 'שפה'!")

# פיצול מחרוזת
מילים = "אחד,שתיים,שלוש"
רשימת_מילים = מילים.split(",")
הדפס("מילים מפוצלות:")
עבור מילה בתוך רשימת_מילים:
    הדפס("  - " + מילה)

# חיבור מחרוזות
חלקים = ["שלום", "עולם", "!"]
מחובר = " ".join(חלקים)
הדפס("מחובר: " + מחובר)

# פורמט מחרוזת
שם = "יוסי"
גיל = 25
הדפס(שם + " בן " + מחרוזת(גיל))
