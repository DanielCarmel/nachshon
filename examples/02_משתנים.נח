# דוגמה 2: משתנים וחישובים
# Example 2: Variables and calculations

שם = "דניאל"
גיל = 25
גובה = 1.75

הדפס("שם: " + שם)
הדפס("גיל: " + מחרוזת(גיל))
הדפס("גובה: " + מחרוזת(גובה))

# חישובים מתמטיים
א = 10
ב = 3

הדפס("חיבור: " + מחרוזת(א + ב))
הדפס("חיסור: " + מחרוזת(א - ב))
הדפס("כפל: " + מחרוזת(א * ב))
הדפס("חילוק: " + מחרוזת(א / ב))
הדפס("שארית: " + מחרוזת(א % ב))
הדפס("חזקה: " + מחרוזת(א ** ב))
