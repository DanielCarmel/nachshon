# דוגמה 7: מילונים
# Example 7: Dictionaries

# יצירת מילון
אדם = {"שם": "יוסי", "גיל": 30, "עיר": "תל אביב"}

הדפס("שם: " + אדם["שם"])
הדפס("גיל: " + מחרוזת(אדם["גיל"]))
הדפס("עיר: " + אדם["עיר"])

# הוספת ערך
אדם["מקצוע"] = "מתכנת"
הדפס("מקצוע: " + אדם["מקצוע"])

# עדכון ערך
אדם["גיל"] = 31
הדפס("גיל חדש: " + מחרוזת(אדם["גיל"]))

# מעבר על מילון
הדפס("\nכל הפרטים:")
עבור מפתח בתוך אדם:
    הדפס(מפתח + ": " + מחרוזת(אדם[מפתח]))

# מילון מקונן
בית_ספר = {
    "שם": "בית ספר אלף",
    "תלמידים": 500,
    "כתובת": {
        "רחוב": "הרצל",
        "מספר": 10,
        "עיר": "חיפה"
    }
}

הדפס("\nבית ספר: " + בית_ספר["שם"])
הדפס("כתובת: " + בית_ספר["כתובת"]["רחוב"] + " " + מחרוזת(בית_ספר["כתובת"]["מספר"]))
