# נחשון יכול לעבוד עם כל חבילות פייתון הקיימות!
# Nachshon can work with all existing Python packages!

# ===== ייבוא מודולים מובנים =====
ייבא math
ייבא random
ייבא datetime
ייבא json
ייבא os

הדפס("╔══════════════════════════════════════════╗")
הדפס("║  🐍 עבודה עם חבילות פייתון בנחשון       ║")
הדפס("╚══════════════════════════════════════════╝")

# ===== מודול math - מתמטיקה =====
הדפס("\n📐 מודול math:")
הדפס("═" * 40)

פאי = math.pi
הדפס("π (פאי) = " + מחרוזת(פאי))

שורש_16 = math.sqrt(16)
הדפס("שורש של 16 = " + מחרוזת(שורש_16))

סינוס = math.sin(math.radians(30))
הדפס("sin(30°) = " + מחרוזת(סינוס))

חזקה = math.pow(2, 10)
הדפס("2 בחזקת 10 = " + מחרוזת(חזקה))

לוג = math.log10(1000)
הדפס("log10(1000) = " + מחרוזת(לוג))

# ===== מודול random - אקראיות =====
הדפס("\n🎲 מודול random:")
הדפס("═" * 40)

מספר_אקראי = random.randint(1, 100)
הדפס("מספר אקראי בין 1-100: " + מחרוזת(מספר_אקראי))

עשרוני_אקראי = random.random()
הדפס("מספר עשרוני אקראי: " + מחרוזת(עשרוני_אקראי))

רשימה = ["תפוח", "בננה", "תפוז", "ענבים", "אבטיח"]
בחירה = random.choice(רשימה)
הדפס("בחירה אקראית מהרשימה: " + בחירה)

random.shuffle(רשימה)
הדפס("רשימה מעורבבת: " + מחרוזת(רשימה))

# ===== מודול datetime - תאריך ושעה =====
הדפס("\n📅 מודול datetime:")
הדפס("═" * 40)

עכשיו = datetime.datetime.now()
הדפס("תאריך ושעה נוכחיים: " + מחרוזת(עכשיו))

תאריך_היום = datetime.date.today()
הדפס("תאריך היום: " + מחרוזת(תאריך_היום))

שנה = עכשיו.year
חודש = עכשיו.month
יום = עכשיו.day
הדפס("שנה: " + מחרוזת(שנה) + ", חודש: " + מחרוזת(חודש) + ", יום: " + מחרוזת(יום))

# יצירת תאריך ספציפי
יום_עצמאות = datetime.date(2026, 5, 14)
הדפס("יום העצמאות הבא: " + מחרוזת(יום_עצמאות))

# חישוב הפרש ימים
הפרש = יום_עצמאות - תאריך_היום
הדפס("ימים עד יום העצמאות: " + מחרוזת(הפרש.days))

# ===== מודול json - עבודה עם JSON =====
הדפס("\n📋 מודול json:")
הדפס("═" * 40)

# המרת מילון ל-JSON
נתונים = {
    "שם": "ישראל",
    "גיל": 30,
    "עיר": "תל אביב",
    "תחביבים": ["קריאה", "תכנות", "טיולים"]
}

json_מחרוזת = json.dumps(נתונים, ensure_ascii=שקר, indent=2)
הדפס("מילון כ-JSON:")
הדפס(json_מחרוזת)

# המרת JSON למילון
json_קלט = '{"מוצר": "מחשב", "מחיר": 3500}'
מילון = json.loads(json_קלט)
הדפס("\nJSON למילון:")
הדפס("מוצר: " + מילון["מוצר"])
הדפס("מחיר: " + מחרוזת(מילון["מחיר"]))

# ===== מודול os - מערכת הפעלה =====
הדפס("\n💻 מודול os:")
הדפס("═" * 40)

תיקייה_נוכחית = os.getcwd()
הדפס("תיקייה נוכחית: " + תיקייה_נוכחית)

מערכת = os.name
הדפס("מערכת הפעלה: " + מערכת)

# בדיקה אם קובץ קיים
אם os.path.exists("README.md"):
    הדפס("✅ קובץ README.md קיים")
אחרת:
    הדפס("❌ קובץ README.md לא נמצא")

# ===== שימוש בחבילות חיצוניות =====
הדפס("\n📦 חבילות חיצוניות:")
הדפס("═" * 40)
הדפס("ניתן להתקין ולהשתמש בחבילות חיצוניות:")
הדפס("")
הדפס("# התקנה:")
הדפס("# pip install requests")
הדפס("")
הדפס("# שימוש בנחשון:")
הדפס("# ייבא requests")
הדפס("# תגובה = requests.get(\"https://api.example.com\")")
הדפס("")

# ===== דוגמה: מחשבון מדעי =====
הדפס("\n🔬 מחשבון מדעי (משתמש ב-math):")
הדפס("═" * 40)

הגדר מחשבון_מדעי():
    """מחשבון מדעי עם פונקציות math"""
    
    הדפס("\nפעולות זמינות:")
    הדפס("  1. שורש ריבועי")
    הדפס("  2. חזקה")
    הדפס("  3. סינוס")
    הדפס("  4. קוסינוס")
    הדפס("  5. לוגריתם")
    הדפס("  6. עיגול מספר")
    
    # דוגמאות חישוב
    הדפס("\nדוגמאות:")
    הדפס("  √144 = " + מחרוזת(math.sqrt(144)))
    הדפס("  3⁴ = " + מחרוזת(math.pow(3, 4)))
    הדפס("  sin(45°) = " + מחרוזת(math.sin(math.radians(45))))
    הדפס("  cos(60°) = " + מחרוזת(math.cos(math.radians(60))))
    הדפס("  ln(e) = " + מחרוזת(math.log(math.e)))
    הדפס("  ⌈3.2⌉ = " + מחרוזת(math.ceil(3.2)))
    הדפס("  ⌊3.8⌋ = " + מחרוזת(math.floor(3.8)))

מחשבון_מדעי()

# ===== דוגמה: מחולל סיסמאות =====
הדפס("\n🔐 מחולל סיסמאות (משתמש ב-random):")
הדפס("═" * 40)

הגדר חולל_סיסמה(אורך):
    """מחולל סיסמאות אקראיות"""
    תווים = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%"
    סיסמה = ""
    עבור _ בתוך טווח(אורך):
        סיסמה = סיסמה + random.choice(תווים)
    החזר סיסמה

הדפס("סיסמה באורך 8: " + חולל_סיסמה(8))
הדפס("סיסמה באורך 12: " + חולל_סיסמה(12))
הדפס("סיסמה באורך 16: " + חולל_סיסמה(16))

הדפס("\n✨ סיום דוגמת חבילות פייתון!")
הדפס("💡 טיפ: כל חבילת פייתון שמותקנת במערכת זמינה לשימוש בנחשון!")
