# ╔══════════════════════════════════════════════════════════════╗
# ║  דוגמה 9: משחק ניחוש מספר - פרויקט מלא                       ║
# ║  Example 9: Number Guessing Game - Complete Project          ║
# ╚══════════════════════════════════════════════════════════════╝

הדפס("╔════════════════════════════════════════╗")
הדפס("║     🎮 משחק ניחוש המספר הגדול 🎮      ║")
הדפס("╚════════════════════════════════════════╝")

# ===== הגדרות המשחק =====
מספר_סודי = 42
מינימום = 1
מקסימום = 100
מקסימום_ניחושים = 7

# ===== פונקציות עזר =====
הגדר הצג_כללים():
    """מציגה את כללי המשחק"""
    הדפס("\n📜 כללי המשחק:")
    הדפס("─" * 40)
    הדפס("• אני חושב על מספר בין " + מחרוזת(מינימום) + " ל-" + מחרוזת(מקסימום))
    הדפס("• יש לך " + מחרוזת(מקסימום_ניחושים) + " ניסיונות לנחש")
    הדפס("• אחרי כל ניחוש אתן לך רמז")
    הדפס("─" * 40 + "\n")

הגדר בדוק_ניחוש(ניחוש, סודי):
    """בודקת ניחוש ומחזירה רמז"""
    הפרש = ניחוש - סודי
    
    אם הפרש == 0:
        החזר ["מצאת", "🎉"]
    אחרת_אם הפרש > 20:
        החזר ["נמוך", "❄️ קר מאוד! נמוך בהרבה"]
    אחרת_אם הפרש > 10:
        החזר ["נמוך", "🌡️ קריר... נמוך יותר"]
    אחרת_אם הפרש > 0:
        החזר ["נמוך", "🔥 חם! קצת נמוך יותר"]
    אחרת_אם הפרש < -20:
        החזר ["גבוה", "❄️ קר מאוד! גבוה בהרבה"]
    אחרת_אם הפרש < -10:
        החזר ["גבוה", "🌡️ קריר... גבוה יותר"]
    אחרת:
        החזר ["גבוה", "🔥 חם! קצת גבוה יותר"]

הגדר חשב_ציון(ניחושים, מקסימום):
    """מחשבת ציון לפי מספר הניחושים"""
    אם ניחושים == 1:
        החזר ["🏆 מדהים!", 100]
    אחרת_אם ניחושים <= 3:
        החזר ["⭐ מצוין!", 90]
    אחרת_אם ניחושים <= 5:
        החזר ["👍 טוב מאוד!", 75]
    אחרת_אם ניחושים <= מקסימום:
        החזר ["✓ עברת!", 60]
    אחרת:
        החזר ["😢 נסה שוב", 0]

הגדר הצג_היסטוריה(ניחושים):
    """מציגה היסטוריית ניחושים"""
    הדפס("\n📊 היסטוריית הניחושים שלך:")
    עבור א בתוך טווח(אורך(ניחושים)):
        ניחוש = ניחושים[א]
        הדפס("  ניסיון " + מחרוזת(א + 1) + ": " + מחרוזת(ניחוש))

הגדר הצג_סרגל_התקדמות(נוכחי, מקסימום):
    """מציגה סרגל התקדמות ויזואלי"""
    מלא = נוכחי
    ריק = מקסימום - נוכחי
    סרגל = "█" * מלא + "░" * ריק
    הדפס("ניחושים: [" + סרגל + "] " + מחרוזת(נוכחי) + "/" + מחרוזת(מקסימום))

# ===== לוגיקת המשחק =====
הצג_כללים()

היסטוריה = []
ניצחון = שקר

# סימולציה של משחק (ניחושים קבועים מראש)
ניחושי_שחקן = [50, 25, 35, 40, 45, 43, 42]

הדפס("�� המשחק מתחיל!\n")

עבור א בתוך טווח(אורך(ניחושי_שחקן)):
    אם א >= מקסימום_ניחושים:
        הפסק
    
    ניחוש = ניחושי_שחקן[א]
    היסטוריה = היסטוריה + [ניחוש]
    מספר_נוכחי = א + 1
    
    הדפס("─" * 40)
    הצג_סרגל_התקדמות(מספר_נוכחי, מקסימום_ניחושים)
    הדפס("הניחוש שלך: " + מחרוזת(ניחוש))
    
    תוצאה = בדוק_ניחוש(ניחוש, מספר_סודי)
    הדפס("רמז: " + תוצאה[1])
    
    אם תוצאה[0] == "מצאת":
        ניצחון = אמת
        הדפס("\n" + "🎊" * 20)
        הדפס("   מזל טוב! ניחשת את המספר " + מחרוזת(מספר_סודי) + "!")
        הדפס("🎊" * 20)
        
        ציון = חשב_ציון(מספר_נוכחי, מקסימום_ניחושים)
        הדפס("\n" + ציון[0])
        הדפס("ציון: " + מחרוזת(ציון[1]) + "/100")
        הדפס("מספר ניחושים: " + מחרוזת(מספר_נוכחי))
        הפסק
    
    הדפס("")

# אם לא ניצח
אם לא ניצחון:
    הדפס("\n" + "═" * 40)
    הדפס("😢 לא הצלחת לנחש!")
    הדפס("המספר הסודי היה: " + מחרוזת(מספר_סודי))
    הדפס("═" * 40)

# הצגת סיכום
הצג_היסטוריה(היסטוריה)

הדפס("\n👋 תודה ששיחקת! נתראה בפעם הבאה!")

