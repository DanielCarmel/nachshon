# דוגמה 18: ייבוא מודולים
# Example 18: Module imports

# הערה: מערכת הייבוא תומכת בייבוא קבצי .נח אחרים
# Note: Import system supports importing other .נח files

# בינתיים, נדגים את התחביר של ייבוא רגיל
# ייבא math  # יעבוד עם מודולי Python
# מתוך math ייבא sqrt  # יעבוד עם מודולי Python

# דמו: פונקציות מתמטיקה בסיסיות
הגדר עצרת(n):
    אם n <= 1:
        החזר 1
    החזר n * עצרת(n - 1)

הגדר פיבונאצי(n):
    אם n <= 0:
        החזר 0
    אם n == 1:
        החזר 1
    החזר פיבונאצי(n - 1) + פיבונאצי(n - 2)

הגדר חזקה(בסיס, מעריך):
    אם מעריך == 0:
        החזר 1
    תוצאה = 1
    עבור i בתוך טווח(מעריך):
        תוצאה = תוצאה * בסיס
    החזר תוצאה

הגדר ראשוני(n):
    אם n < 2:
        החזר שקר
    עבור i בתוך טווח(2, n):
        אם n % i == 0:
            החזר שקר
    החזר אמת

# שימוש בפונקציות
הדפס("=== ספריית מתמטיקה ===")
הדפס("5! =", עצרת(5))
הדפס("פיבונאצ'י(10) =", פיבונאצי(10))
הדפס("2^10 =", חזקה(2, 10))

# מספרים ראשוניים עד 20
ראשוניים = [n עבור n בתוך טווח(2, 21) אם ראשוני(n)]
הדפס("מספרים ראשוניים עד 20:", ראשוניים)

# עצרות
הדפס("עצרות 1-7:", [עצרת(n) עבור n בתוך טווח(1, 8)])

# סדרת פיבונאצ'י
הדפס("פיבונאצ'י 0-10:", [פיבונאצי(n) עבור n בתוך טווח(11)])
